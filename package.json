    "light-my-request": "2.0.1"
  },
  "devDependencies": {
    "JSONStream": "^1.3.5",
    "autocannon": "^3.1.0",
    "branch-comparer": "^0.4.0",
    "concurrently": "^4.0.1",
    "coveralls": "^3.0.2",
    "eslint": "~5.7.0",
    "fast-json-body": "^1.1.0",
    "h2url": "^0.1.2",
